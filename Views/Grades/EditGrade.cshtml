@model GradeBook.Models.Grade
<head>
    <meta charset="utf-8" />
    <title>GradeBook</title>
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/jumper.css")" />
</head>
<body>
    <main>
        <div id="jumper">ඞ</div>
        <h2>Edit Grade</h2>
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="StudentId" value="@Model.StudentId" />
            <div>
                <label for="Subject">Subject</label>
                <input type="text" id="Subject" name="Subject" value="@Model.Subject" />
            </div>
            <div>
                <label for="GradeValue">Grade</label>
                <input type="number" id="GradeValue" name="GradeValue" value="@Model.GradeValue" />
            </div>
            <div>
                <label for="Date">Date</label>
                <input type="date" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" />
            </div>
            <div>
                <label for="Description">Description</label>
                <input type="text" id="Description" name="Description" value="@Model.Description" />
            </div>
            <button type="submit">Save</button>
            <a href="@Url.Action("DisplayGrades", "Grades", new { studentId = Model.StudentId })">Cancel</a>
        </form>
    </main>
    <script src="@Url.Content("~/js/jumper.js")"></script>
    <script src="@Url.Content("~/js/gradeColor.js")"></script>
</body>
