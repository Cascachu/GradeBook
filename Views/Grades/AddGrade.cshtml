@model GradeBook.Models.Grade
<head>
    <meta charset="utf-8" />
    <title>Grades</title>
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/jumper.css")" />
</head>
<body>
    <div id="jumper">ඞ</div>

    <main>
        <h2>Add Grade</h2>
        <form method="post">
            <div>
                <label for="GradeValue">Grade</label>
                <input type="number" id="GradeValue" name="GradeValue" min="1" max="6" value="1" />
            </div>

            <div>
                <label for="Subject">Subject</label>
                <input type="text" id="Subject" name="Subject" />
            </div>

            <div>
                <label for="Date">Date</label>
                <input type="date" id="Date" name="Date" />
            </div>

            <div>
                <label for="Description">Description</label>
                <input type="text" id="Description" name="Description" />
            </div>

            <button type="submit">Add Grade</button>
            <a href="@Url.Action("DisplayGrades", "Grades", new { studentId = Model.StudentId })">Cancel</a>

        </form>
    </main>
    <script src="@Url.Content("~/js/jumper.js")"></script>

</body>

