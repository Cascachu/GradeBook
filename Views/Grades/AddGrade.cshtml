@model GradeBook.Models.Grade

<h2>Add Grade</h2>

<form method="post">
    <div>
        <label for="GradeValue">Grade</label>
        <input type="number" id="GradeValue" name="GradeValue" min="1" max="6" value="1" />
    </div>
    
    <div>
        <label for="Subject">Subject</label>
        <input type="text" id="Subject" name="Subject" />
    </div>

    <div>
        <label for="Date">Date</label>
        <input type="date" id="Date" name="Date" />
    </div>

    <div>
        <label for="Description">Description</label>
        <input type="text" id="Description" name="Description" />
    </div>

    <button type="submit">Add Grade</button>
    <a href="@Url.Action("DisplayGrades", "Grades", new { studentId = Model.StudentId })">Cancel</a>

</form>
